<%=render "shared/navbar", right_el: "back", left_el: "Log in", title: "LOGIN"%>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3 mx-2">
    <%= f.label :email, class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class:"form-control" %>
  </div>

  <div class="field mx-2">
    <%= f.label :password, class:"form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", required: true, class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mx-2">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-check-label" %>
    </div>
  <% end %>

  <div class="actions mx-2 mt-3">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<p class="text-center mt-2">
  <%=link_to "/users/password/new", class: "link-to-item forgot-pass" do%>
    Forgot password?
  <%end%>
</p>

